<Window x:Class="AkhmerovaLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AkhmerovaLanguage"
        mc:Ignorable="d" 
        Title="AkhmerovaLanguage" MinHeight="450" MinWidth="800" FontFamily="Comic Sans MS" Icon="Resources\school_logo.ico">
    <Grid Background="#FFE7FABF">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="Resources\school_logo.png" Grid.Row="0" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Языковая школа «Лангуаге»" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"></TextBlock>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" ContentRendered="MainFrame_ContentRendered"></Frame>
        <Button x:Name="BackButton" Click="BackButton_Click" Grid.Row="0" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center"></Button>
    </Grid>
</Window>
